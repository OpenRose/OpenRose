@using OpenRose.WebUI.Services
@inject NavigationManager NavManager
@inject ConfigurationService ConfigurationService

@page "/itemzTypeDetails/{ItemzTypeId:guid}"

<ItemzTypeDetailsComponent ItemzTypeId="@ItemzTypeId" CalledFrom="@this.GetType().Name" />

@code {
	[Parameter]
	public Guid ItemzTypeId { get; set; }

	protected override async Task OnInitializedAsync()
	{
		if (!ConfigurationService.IsOpenRoseAPIConfigured)
		{
			NavManager.NavigateTo("/");
			return;
		}
	}
}
