	private async Task ConfirmNavigation(LocationChangingContext context)
	{
		bool canLeave = await FormStateService.ConfirmDiscardChangesAsync(ItemzId);

		if (!canLeave)
		{
			context.PreventNavigation();
		}
		else
		{
			FormStateService.SetDirty(ItemzId, false);
		}
	}

	private string NormalizeMarkdown(string input)
	{
		return (input ?? string.Empty)
			.Replace("\r\n", "\n")   // unify line endings
			.Trim();                 // remove leading/trailing whitespace
	}
