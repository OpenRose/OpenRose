    public static async Task<string> DetectImportRecordTypeLiteAsync(Stream jsonStream)
    {
        var buffer = new byte[8192]; // small, efficient chunk size
        using var memoryStream = new MemoryStream();
        int bytesRead;

        // Read a slice of the stream — enough to reach root nodes
        while ((bytesRead = await jsonStream.ReadAsync(buffer, 0, buffer.Length)) > 0)
        {
            memoryStream.Write(buffer, 0, bytesRead);
            if (memoryStream.Length > 4096) break; // heuristic limit
        }

        memoryStream.Seek(0, SeekOrigin.Begin);
        var reader = new Utf8JsonReader(memoryStream.ToArray());

        var candidateKeys = new[] {
        "Projects", "ItemzTypes", "Itemz", "Baselines",
        "BaselineItemzTypes", "BaselineItemz"
    };

        string? currentProperty = null;

        while (reader.Read())
        {
            if (reader.TokenType == JsonTokenType.PropertyName)
            {
                currentProperty = reader.GetString();
            }
            else if (currentProperty != null && candidateKeys.Contains(currentProperty, StringComparer.OrdinalIgnoreCase))
            {
                if (reader.TokenType == JsonTokenType.StartArray)
                {
                    // Peek inside array to see if it has data
                    reader.Read();
                    if (reader.TokenType != JsonTokenType.EndArray)
                        return currentProperty;
                }
                else if (reader.TokenType != JsonTokenType.Null)
                {
                    // It's not null — we found usable content
                    return currentProperty;
                }

                currentProperty = null; // reset after check
            }

            // Stop after root-level properties
            if (reader.CurrentDepth > 1)
                break;
        }

        return "Unknown";
    }


